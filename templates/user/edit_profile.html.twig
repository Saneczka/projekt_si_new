{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_edit'|trans }}
{% endblock %}

{% block body %}

    <h2>
        {{ 'title_user_edit'|trans }}
    </h2>
    <br>

    {{ form_start(form, { method: 'POST', action: url('user_edit_profile'), attr: {novalidate: 'novalidate'} }) }}
    {% if false == form.vars.valid %}
        {% include 'default/_single_flash_message.html.twig' with {
            type: 'danger',
            message: 'message_form_error'|trans,
        }%}
    {% endif %}

    <div class="form-group">
        {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.profile.firstName, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.profile.lastName, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.profile.email, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.newPassword, {'attr': {'class': 'form-control'}}) }}
    </div>

    {{ form_widget(form) }}

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ submit_label|default('action_save'|trans) }}" class="btn btn-primary"/>
    </div>

    <div class="form-group row float-sm-left">
        <a href="{{ url('album_index') }}" class="btn btn-light">
            {{ 'action_back_to_list'|trans }} <i class="bi bi-arrow-return-left"></i>
        </a>
    </div>
    {{ form_end(form) }}

{% endblock %}