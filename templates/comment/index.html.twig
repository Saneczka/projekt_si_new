{% extends 'base.html.twig' %}

    {% block title %}
        {{ 'album_list_title'|trans }}
    {% endblock %}

    {% block body %}
    <div id="comment_list">
        <h1>{{ 'comment_list_title'|trans }}</h1>
        {% if pagination is defined and pagination.items|length %}
            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'comment.id') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'image_picture'|trans, 'image.title') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'comment_nickname'|trans, 'comment.nickname') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'comment_email'|trans, 'comment.email') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'comment_content'|trans, 'comment.content') }}</th>
                    <th>{{ 'label_actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for comment in pagination.items %}
                    <tr>
                        <td>{{ comment.id }}</td>
                        <td>{{ comment.image.title }}</td>
                        <td>{{ comment.nickname }}</td>
                        <td>{{ comment.email }}</td>
                        <td>{{ comment.content }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ url('comment_show', {id: comment.id}) }}"
                               title="{{ 'action_show'|trans }}">
                                {{ 'action_show'|trans }}
                            </a>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a class="btn btn-primary" href="{{ url('comment_edit', {id: comment.id}) }}"
                               title="{{ 'action_edit'|trans }}">
                                {{ 'action_edit'|trans }}
                            </a>
                            <a class="btn btn-danger" href="{{ url('comment_delete', {id: comment.id}) }}"
                               title="{{ 'action_delete'|trans }}">
                                {{ 'action_delete'|trans }}
                            </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

        {% else %}
            <p>
                {{ 'message_empty_list'|trans }}
            </p>
        {% endif %}
    </div>
    {% endblock %}