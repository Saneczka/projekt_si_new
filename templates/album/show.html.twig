{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_album_show'|trans({'%id%': album.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_album_show'|trans({'%id%':album.id|default('')}) }}</h1>
    {% if album is defined %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ album.id }}</dd>
            <dt>{{ 'album_name'|trans }}</dt>
            <dd>{{ album.name }}</dd>
            <dt>{{ 'album_description'|trans }}</dt>
            <dd>{{ album.description }}</dd>
        </dl>
        <p>
            <a href="{{ url('album_index') }}" class="btn btn-light">
                {{ 'action_back_to_list'|trans }} <i class="bi bi-arrow-return-left"></i>
            </a>
        </p>
    {% else %}
        {% include 'default/_single_flash_message.html.twig' with {
            type: 'warning',
            message: 'message_item_not_found'|trans
        } %}
    {% endif %}
{% endblock %}